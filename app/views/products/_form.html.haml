%container
  = render 'shared/error_messages_product'
= form_with(model: @product, local: true) do |form|
  %p
    = form.label :title
    %br/
    = form.text_field :title
  %p
    = form.label :description
    %br/
    = form.text_area :description
  %p
    = form.label :price
    %br/
    = form.text_field :price
    %p 
    = form.file_field :photo
    %br/
  %p
    = form.submit :save

.container
  %hr/
  %footer
    %p © Bogdan Cadar - 2018
    / Modal condainer
    .container
      / Button trigger modal
      %button#mock-btn.btn.btn-warning.orange-btn.btn-sm{:type => "button"}
        Mocked Food
      %button.btn.btn-warning.orange-btn.btn-sm{"data-target" => ".bd-example-modal-lg", "data-toggle" => "modal", :type => "button"}
        Add food
      / Modal for adding food
      #exampleModal.modal.fade.bd-example-modal-lg{"aria-hidden" => "true", "aria-labelledby" => "exampleModalLabel", :role => "dialog", :tabindex => "-1"}
        .modal-dialog.modal-lg{:role => "document"}
          .modal-content
            .modal-header
              %h5#exampleModalLabel.modal-title Add food:
              %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
                %span{"aria-hidden" => "true"} ×
            .modal-body
              .container
                .col-sm
                  %form#add-food-form
                    .form-group
                      %label ID:
                      %input#input-id.form-control{:placeholder => "0", :required => "", :type => "number"}/
                    .form-group
                      %label Name:
                      %input#input-name.form-control{:placeholder => "Burger", :required => "", :type => "text"}/
                    .form-group
                      %label Category:
                      %input#input-category.form-control{:placeholder => "Main Course", :required => "", :type => "text"}/
                    .form-group
                      %label Price:
                      %input#input-price.form-control{:placeholder => "10", :required => "", :type => "number"}/
                    .form-group
                      %label Photo Link:
                      %input#input-photo.form-control{:placeholder => "https://photo.com/9e8f...", :type => "text"}/
                    %button#button-submit.btn.orange-btn{:type => "submit"} Add
            %br/
            .container
              .modal-body
                %table.table
                  %thead
                    %tr
                      %th{:scope => "col"} ID
                      %th{:scope => "col"} Name
                      %th{:scope => "col"} Category
                      %th{:scope => "col"} Price
                      %th{:scope => "col"} Photo
                      %th{:scope => "col"}
                        %i.fas.fa-times
                  %tbody.food-list-view
                    / table content

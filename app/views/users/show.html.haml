.container
  .row
    .title-bar
      %h4 Profile
  .row.justify-content-center
    = @user.name
  %br
  .row.justify-content-center    
    = gravatar_for @user
  %br
  .row.justify-content-center 
    - if @user.admin?
      = link_to '<b>Add Products</b><span class="fas fa-plus-circle fa-4x"></span>'.html_safe, products_path, :class => "nav-button product-list"
      = link_to '<b>User List</b><span class="fas fa-users fa-4x">'.html_safe, users_path, :class => "nav-button user-list"
      = link_to '<b>Order List</b><span class="fas fa-list-ul fa-4x">'.html_safe, orders_path, :class => "nav-button order-list"
    - else
      %button.btn.btn-light= link_to 'My Orders', orders_path


